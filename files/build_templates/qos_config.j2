{% else %}
            "pfc_enable"      : "3,4",
{% endif %}
            "pfcwd_sw_enable" : "3,4"
        }{% if not loop.last %},{% endif %}

{% endfor %}
    },
{% if generate_wred_profiles is defined %}
    {{- generate_wred_profiles() }}
{% else %}
